# ---------- Base Image ----------
    FROM python:3.12-slim

    # ---------- Set Working Directory ----------
    WORKDIR /app
    
    # ---------- Install Dependencies ----------
    COPY requirements.txt .
    RUN pip install --no-cache-dir -r requirements.txt
    
    # ---------- Copy App Code ----------
    COPY . .
    
    # ---------- Expose Port ----------
    EXPOSE 8000
    
    # ---------- Start FastAPI Server ----------
    CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
    